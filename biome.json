{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": {
					"level": "warn"
				}
			}
		},
		"includes": ["**", "!**/node_modules/**", "!**/dist/**", "!**/.astro/**"]
	},
	"formatter": {
		"enabled": true,
		"includes": ["**", "!**/node_modules/**", "!**/dist/**", "!**/.astro/**"]
	},
	"javascript": {
		"globals": ["Astro"],
		"formatter": {
			"quoteStyle": "single",
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}
