---
import '@fontsource/lato';
---
<style is:global>
    /* Unscoped, delivered as-is to the browser.
       Applies to all <h1> tags on your site. */
    html, body {
        font-family: "Lato", sans-serif;
        background-color: #1e1f20;
        color: #f2f6f8;
    }

    .astro-code{
        border-radius: .8rem;
        padding: 1.4rem;
        margin-bottom: 2rem;
        box-shadow: 0 0 1.6rem rgba(0, 0, 0, 0.1);
    }
</style>