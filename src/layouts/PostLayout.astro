import { Container } from '../components/js/Atom/Layout/Container';
import { H1, Italic, P } from '../components/js/Atom/Typography';
import BaseLayout from './BaseLayout.astro';

const { title, description, publishedAt, author, readingTime } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <Container>
    <Article>
      <H1>{title}</H1>
      <P color="gray"><Italic>{readingTime} Â· published by {author} on {publishedAt.toLocaleDateString('en-US')}</Italic></P>
